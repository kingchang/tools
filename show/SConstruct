# -*- coding: UTF-8 -*-


# Standard:
import os.path


env = Environment(tools = ['default', 'cython', 'pep8', 'pylint', 'unittest'])
conf_dir = 'config'
src_files = env.Glob('*.py')

env.Alias('check', [
    env.Pep8('pep8', src_files,
        config_file = os.path.join(conf_dir, 'pep8.cfg')),
    env.Pylint('pylint', src_files,
        config_file = os.path.join(conf_dir, 'pylint.cfg'))])

env.Alias('compile',
    env.Cython('show.c', 'show.py',
        is_standalone = True,
        do_compilation = True))

env.Alias('test', env.UnitTest('unit-test', env.Glob('test*.py')))

env.Default('compile')
