env = Environment(tools = ['default', 'cython', 'pep8', 'pylint'])
src_files = env.Glob('*.py')

env.Alias('check', [
    env.Pep8('pep8', src_files),
    env.Pylint('pylint', src_files, config_file = '.pylintrc')])

env.Alias('compile',
    env.Cython('show.c', src_files, is_standalone = True, do_compilation = True))

env.Default('compile')
