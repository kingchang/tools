# -*- coding: UTF-8 -*-


# Standard:
import os.path


env = Environment(tools = ['default', 'cython', 'pep8', 'pylint'])
conf_dir = 'config'
src_files = env.Glob('*.py')

env.Alias('check', [
    env.Pep8('pep8', src_files,
        config_file = os.path.join(conf_dir, '.pep8')),
    env.Pylint('pylint', src_files,
        config_file = os.path.join(conf_dir, '.pylintrc'))])

env.Alias('compile',
    env.Cython('show.c', src_files,
        is_standalone = True,
        do_compilation = True))

env.Default('compile')
